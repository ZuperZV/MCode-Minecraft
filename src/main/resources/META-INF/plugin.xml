<!-- Plugin Configuration File. Read more: https://plugins.jetbrains.com/docs/intellij/plugin-configuration-file.html -->
<idea-plugin>
    <id>com.github.zuperzv.mcodeminecraft</id>
    <name>MCode-Minecraft</name>
    <vendor>zuperzv</vendor>

    <depends>com.intellij.modules.platform</depends>

    <extensions defaultExtensionNs="com.intellij">
        <toolWindow
                id="Block Model"
                factoryClass="com.github.zuperzv.mcodeminecraft.toolWindow.ModelViewerToolWindowFactory"
                anchor="right"/>
        <toolWindow
                id="Recipe Viewer"
                factoryClass="com.github.zuperzv.mcodeminecraft.recipe.RecipeViewerToolWindowFactory"
                anchor="right"/>
        <startupActivity
                implementation="com.github.zuperzv.mcodeminecraft.assets.MinecraftAssetPreloadActivity"/>
    </extensions>

    <actions>
        <action
                id="PreviewMinecraftModel"
                class="com.github.zuperzv.mcodeminecraft.actions.PreviewModelAction"
                text="Preview Minecraft Model">
            <add-to-group group-id="ProjectViewPopupMenu"/>
        </action>
        <action
                id="ClearMinecraftPluginCaches"
                class="com.github.zuperzv.mcodeminecraft.actions.ClearPluginCachesAction"
                text="Clear MCode Minecraft Caches">
            <add-to-group group-id="ToolsMenu"/>
        </action>
    </actions>

</idea-plugin>
